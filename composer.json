{
    "name": "perspikapps/laravel-envribbon",
    "description": "A laravel ribbon to display current environement",
    "license": "MIT",
    "keywords": [
        "laravel",
        "env",
        "ribbon"
    ],
    "type": "library",
    "authors": [
        {
            "name": "@tomgrv",
            "email": "tomgrv@users.perspikapps.fr"
        }
    ],
    "require": {
        "php": ">=7.2",
        "avto-dev/app-version-laravel": "^3.2",
        "illuminate/support": "^6.0|^7.0|^8.0"
    },
    "require-dev": {
        "orchestra/testbench": "^4.0|^5.0|^6.0",
        "friendsofphp/php-cs-fixer": "^2.16",
        "nunomaduro/phpinsights": "dev-master",
        "phpunit/phpunit": "^9.0",
        "squizlabs/php_codesniffer": "^3.5"
    },
    "autoload": {
        "psr-4": {
            "Perspikapps\\EnvRibbon\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Perspikapps\\EnvRibbon\\Tests\\": "tests"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump"
        ],
        "post-update-cmd": [
            "Illuminate\\Foundation\\ComposerScripts::postUpdate"
        ],
        "lint": [
            "php-cs-fixer fix -v --config=.php_cs --using-cache=no"
        ],
        "lint-check": [
            "php-cs-fixer fix -v --config=.php_cs --using-cache=no --dry-run"
        ],
        "test": [
            "phpunit --coverage-text"
        ]
    },
    "extra": {
        "laravel": {
            "providers": [
                "Perspikapps\\EnvRibbon\\ServiceProvider"
            ]
        }
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true
    }
}
